<Window x:Class="FilmFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FilmFinder"
        mc:Ignorable="d"
        Title="Film Finder" Height="450" Width="800">
    <Grid Margin="5" Background="#F6F6F6">
        <Grid.Resources>
            <Style TargetType="{x:Type Control}">
                <Setter Property="Margin" Value="0,0,0,5" />
            </Style>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="30"/>
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="5*" />
        </Grid.RowDefinitions>
        <Label 
            HorizontalAlignment="Center" 
            VerticalAlignment="Center" 
            
            FontWeight="Bold" 
            FontSize="24" 
            Content="Film Finder" 
            Grid.Row="0"
            Grid.Column="0"
        />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            x:Name="SearchBar"
            VerticalAlignment="Center"
            FontSize="24"
        />
        <Button
            Grid.Row="0"
            Grid.Column="2"
            Content="Search"
            Click="SearchButton_Click"
        />
        <ListBox
            x:Name="FilmResults"
            Grid.Column="1"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Grid.RowSpan="3"
            Background="#333333"
            Foreground="#ffffff"
        />

        <Button
            Content="A-Z"
            Grid.Row="1"
            Grid.Column="0"
            Tag="alphabetical"
            Click="SortingMode_Click"
        />
        <Button
            Content="By Year"
            Grid.Row="2"
            Grid.Column="0"
            Tag="chronological"
            Click="SortingMode_Click"
        />
        <TextBlock
            x:Name="ErrorBox"
            Grid.Row="3"
            Grid.Column="0"
            Background="#880000"
            Visibility="Collapsed"
            TextWrapping="Wrap"
            Text=""
        />

    </Grid>
</Window>
